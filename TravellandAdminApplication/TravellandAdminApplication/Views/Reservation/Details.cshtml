@{
}
@model TravellandAdminApplication.Models.Reservation

<div class="container">

    <p>
        <a class="btn btn-success">@Model.Client.UserName</a>
    </p>

    @for (int i = 0; i < Model.Offers.Count(); i++)
    {
        var item = Model.Offers.ElementAt(i).SelectedOffer;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" style="height: 70%" src="@item.OfferImage" alt="Card image cap">
                    <div class="card-body">
                        <h3>@item.OfferDestination</h3>
                        <p>@item.OfferDescription</p>
                    </div>

                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>
