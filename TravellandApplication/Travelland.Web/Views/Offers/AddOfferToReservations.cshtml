@model Travelland.Domain.DTO.AddOfferToReservationsDto

@{
    ViewData["Title"] = "Add to Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Selected Offer to Client Reservations: </h1>

<hr/>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddOfferToReservations" method="post">
            <input type="hidden" asp-for="id"/>
            <div class="form-group">
                <label asp-for="@Model.SelectedOffer.OfferDestination"></label>
                <input disabled asp-for="SelectedOffer.OfferDestination" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>