@model List<Travelland.Domain.DomainModels.Offer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Offers" asp-action="Create">Add a new Offer</a>
    </div>

    @for (int i=0; i< Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.OfferImage" style="height: 50%" alt="Image for the destination offer."/>

                <div class="card-body">
                    <h3 class="card-title">@item.OfferDestination</h3>
                    <p class="card-text">@item.OfferDescription</p>

                    <h6>Price: @item.OfferPrice</h6>
                </div>

                <div class="card-footer">

                    <a asp-controller="Offers" asp-action="AddOfferToReservations" asp-route-id="@item.id" class="btn btn-info">Add to Reservations</a>
                    <a asp-controller="Offers" asp-action="Edit" asp-route-id="@item.id" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        if (i % 3 == 2)
        {
            @:</div>
        }

    }
    
</div>





